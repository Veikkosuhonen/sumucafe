<%= turbo_frame_tag "restaurants_list" do %>
  <div class="flex items-center gap-2 p-4 rounded-lg mb-8 sticky top-4 z-10 bg-stone-300/70 backdrop-blur-md">
    <%= link_to "Previous day", "?date=#{@date.prev_day}", class: "p-2 bg-stone-300 hover:bg-stone-400 rounded-lg text-stone-800"%>
    <span class="p-2 rounded-lg text-stone-800 w-[7rem]">
      <%= @date.strftime("%a, %b %d") %>
    </span>
    <%= link_to "Next day", "?date=#{@date.next_day}", class: "p-2 bg-stone-300 hover:bg-stone-400 rounded-lg text-stone-800"%>
    <%= link_to "Today", "?date=#{Date.today}", class: "p-2 bg-stone-300 hover:bg-stone-400 rounded-lg text-stone-800"%>

  </div>

  <% @locations.each do |location| %>
    <div class="mb-16 sm:mb-32">
      <h2 class="text-stone-800 text-xl mb-2"><%= location.name %></h2>
      <div class="flex gap-4 p-2 rounded-lg bg-stone-300">
        <% @restaurants_by_day.each do |day, restaurants_by_location_id| %>
          <section class="p-4 md:w-[35rem] lg:w-[45rem]">
            <%= render restaurants_by_location_id[location.id], day: day %>
          </section>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
