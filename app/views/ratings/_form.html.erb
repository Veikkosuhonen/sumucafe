<%= form_with(model: rating, class: "contents", data: { "controller" => "ratingForm" }) do |form| %>
  <%= form.hidden_field :meal_id %>
  <%= form.hidden_field :user_id %>
  <%= form.hidden_field :score, data: { "ratingForm-target": "scoreField", } %>

  <% (1..5).each do |score| %>
    <%= form.submit score,
                    class: "rounded-lg py-3 px-5 #{(rating.score and score <= rating.score) ? "bg-blue-600" : ""} border border-blue-600 text-white inline-block font-medium cursor-pointer",
                    data: { action: "ratingForm#setScore", "score": score } %>
  <% end %>

<% end %>
